https://leetcode.com/problems/number-of-submatrices-that-sum-to-target/description/

class Solution {
    public int numSubmatrixSumTarget(int[][] matrix, int target) {
        int m = matrix.length, n = matrix[0].length;
        int count = 0;

        // Prefix sum for each row
        for (int[] row : matrix) {
            for (int i = 1; i < n; i++) {
                row[i] += row[i - 1];
            }
        }

        // Fix two columns: baseCol and j
        for (int baseCol = 0; baseCol < n; baseCol++) {
            for (int j = baseCol; j < n; j++) {
                Map<Integer, Integer> prefixCount = new HashMap<>();
                prefixCount.put(0, 1);
                int sum = 0;

                for (int i = 0; i < m; i++) {
                    // Sum of elements in row i between baseCol and j
                    sum += matrix[i][j] - (baseCol > 0 ? matrix[i][baseCol - 1] : 0);
                    count += prefixCount.getOrDefault(sum - target, 0);
                    prefixCount.put(sum, prefixCount.getOrDefault(sum, 0) + 1);
                }
            }
        }

        return count;
    }
}
