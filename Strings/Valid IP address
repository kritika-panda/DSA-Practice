https://leetcode.com/problems/validate-ip-address/description/

class Solution {
    public String validIPAddress(String queryIP) {
        if (queryIP.contains(".")) {
            String[] str = queryIP.split("\\.", -1);
            if (str.length != 4) return "Neither";
            for (String s : str) {
                if (s.length() == 0 || s.length() > 3) return "Neither";
                if (s.charAt(0) == '0' && s.length() > 1) return "Neither";
                for (char c : s.toCharArray()) {
                    if (!Character.isDigit(c)) return "Neither";
                }
                int val = Integer.parseInt(s);
                if (val < 0 || val > 255) return "Neither";
            }
            return "IPv4";
        } else if (queryIP.contains(":")) {
            String[] str = queryIP.split(":", -1);
            if (str.length != 8) return "Neither";
            for (String s : str) {
                if (s.length() == 0 || s.length() > 4) return "Neither";
                for (char c : s.toCharArray()) {
                    if (!isHexDigit(c)) return "Neither";
                }
            }
            return "IPv6";
        }
        return "Neither";
    }

    private boolean isHexDigit(char c) {
        return Character.isDigit(c) ||
               (c >= 'a' && c <= 'f') ||
               (c >= 'A' && c <= 'F');
    }
}
